#include <gio/gio.h>

namespace Gio
{

bool DataOutputStream::put_byte(guchar data)
{
  GError* gerror = 0;
  const guchar retvalue = g_data_output_stream_put_byte(gobj(), data, 0, &(gerror));
  if(gerror)
    ::Glib::Error::throw_exception(gerror);

  return retvalue;
}

