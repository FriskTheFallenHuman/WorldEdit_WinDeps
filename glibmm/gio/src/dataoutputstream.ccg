bool DataOutputStream::put_string(std::string str)
{
  GError* gerror = 0;
  const bool retval = g_data_output_stream_put_string(gobj(),
                                                str.c_str (),
                                                0,
                                                &gerror);
  if(gerror)
    ::Glib::Error::throw_exception(gerror);
    return retval;
}


